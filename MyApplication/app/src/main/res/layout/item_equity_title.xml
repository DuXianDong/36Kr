<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="股权投资"
        android:textSize="@dimen/twentySp" />

    <ImageView
        android:id="@+id/item_equity_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/ten"
        android:layout_marginLeft="@dimen/ten"
        android:src="@mipmap/nav_icon_search" />

    <ImageView
        android:id="@+id/item_equity_gift_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten"
        android:layout_marginLeft="@dimen/ten"
        android:layout_toLeftOf="@id/item_equity_search"
        android:src="@mipmap/nav_icon_activity" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_equity_gift_box"
        android:background="@color/grey" />

</RelativeLayout>